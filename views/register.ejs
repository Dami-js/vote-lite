<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <% include ./partials/messages %>
      <form action="/voters/register" method="POST">
        <div class="form-group">
          <label for="surname">Surname Name</label>
          <input type="text" id="surname" name="surname" class="form-control" placeholder="Enter Surname"
            value="<%= typeof surname != 'undefined' ? surname : '' %>" />
        </div>
        <div class="form-group">
          <label for="voterId">voterId</label>
          <input type="text" id="voterId" name="voterId" class="form-control" placeholder="Enter voterId"
            value="<%= typeof voterId != 'undefined' ? voterId : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/voters/login">Login</a></p>
    </div>
  </div>
</div>